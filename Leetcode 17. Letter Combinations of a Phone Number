class Solution {
private:
    void solve(vector<string> &ans , string output , int idx , string digits ,string mapping[]){
        
        if(idx >= digits.length()){
           ans.push_back(output);
            return;
        }

        int num = digits[idx] - '0';
        string value = mapping[num];

        for(int i = 0 ; i < value.length() ; i++){
             
             output.push_back(value[i]);
             solve(ans , output , idx + 1 , digits , mapping);
             output.pop_back();
        }

    }
public:
    vector<string> letterCombinations(string digits) {
        vector<string>ans;
         
         if(digits.length() == 0)
            return ans;

         string output;
         
         string mapping[10] = {" " , " " , "abc" , "def" , "ghi" , "jkl" , "mno" , "pqrs" , "tuv" , "wxyz"};
         solve(ans , output , 0 , digits , mapping);

         return ans;   
    }
};
